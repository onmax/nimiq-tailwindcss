{
  "name": "nimiq-tailwindcss",
  "version": "1.0.1",
  "description": "A custom Tailwind CSS config with Nimiq styles",
  "main": "index.js",
  "repository": "https://github.com/onmax/tailwindcss-nimiq",
  "author": "onmax",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.17",
    "tailwindcss": "^3.1.8",
    "vitepress": "^1.0.0-alpha.19",
    "vue": "^3.2.40",
    "release-it": "^14.14.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "theme:build": "tsc",
    "theme:release": "yarn theme:build && release-it",
    "docs:dev": "vitepress dev docs/src",
    "docs:build": "vitepress build docs/src",
    "docs:serve": "vitepress serve docs/src"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {
        "content": [
          "./docs/src/**/*.md"
        ],
        "theme": {
          "extend": {}
        },
        "plugins": []
      },
      "autoprefixer": {}
    }
  }
}
