{
  "name": "nimiq-tailwindcss",
  "version": "1.0.6",
  "description": "A custom Tailwind CSS config with Nimiq styles",
  "repository": "https://github.com/onmax/tailwindcss-nimiq",
  "author": "onmax",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.12",
    "bumpp": "^8.2.1",
    "postcss": "^8.4.17",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "vitepress": "^1.0.0-alpha.19",
    "vue": "^3.2.40"
  },
  "scripts": {
    "theme:build": "tsc",
    "release": "bumpp --all && npm publish --access public",
    "docs:dev": "vitepress dev docs/src",
    "docs:build": "vitepress build docs/src",
    "docs:serve": "vitepress serve docs/src"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {
        "content": [
          "./docs/src/**/*.md"
        ],
        "theme": {
          "extend": {}
        },
        "plugins": []
      },
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "nimiq-tailwindcss": "^1.0.5"
  }
}
