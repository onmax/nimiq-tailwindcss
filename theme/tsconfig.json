{
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "declaration": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "noUnusedLocals": true,
    },
    "exclude": [
        "node_modules",
        "**/dist",
    ],
    "paths": {
        "@/*": [
            "/"
        ]
    }
}