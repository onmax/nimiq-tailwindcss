{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "declaration": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "jsx": "preserve",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "noUnusedLocals": true,
    },
    "exclude": [
        "node_modules",
        "**/dist",
    ]
}